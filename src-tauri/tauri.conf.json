{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Forge",
  "version": "1.0.0",
  "identifier": "com.forge.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' ipc: http://ipc.localhost http://localhost:* ws://localhost:*"
    },
    "windows": [
      {
        "title": "Forge",
        "fullscreen": false,
        "resizable": true,
        "width": 390,
        "height": 844
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ]
  }
}
